<script type="application/javascript">
    $( document ).ready(function()
    {
        alertify.logPosition("top right");

    {% for toast in toasts %}

        {% if toast.toastType == 'success' %}
        alertify.success('{{ toast.message }}');
        {% elseif toast.toastType == 'error' %}
        alertify.error('{{ toast.message }}');
        {% else %}
        alertify.log('{{ toast.message }}');
        {% endif %}

    {% endfor %}
    });
</script>