<script type="application/javascript">
    $( document ).ready(function()
    {
    {% for toast in toasts %}

        {% if toast.toastType == 'success' %}
        alertify.notify('{{ toast.message }}', 'success');
        {% elseif toast.toastType == 'error' %}
        alertify.notify('{{ toast.message }}', 'error');
        {% else %}
        alertify.notify('{{ toast.message }}');
        {% endif %}

    {% endfor %}
    });
</script>